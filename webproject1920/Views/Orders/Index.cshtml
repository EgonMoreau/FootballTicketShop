@model IEnumerable<webproject1920.Domain.Entities.OrderVM>

@{
    ViewData["Title"] = "Index";
}

<div class="p-3">
    <h1>Mijn bestellingen</h1>

    @if (Model.Count() > 0) {
            <table class="table">
            <thead>
                <tr>
                    <th>
                        Ordernr.
                    </th>
                    <th>
                        Besteldatum
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    } else {
        <h2>Geen bestellingen</h2>
    }
</div>
